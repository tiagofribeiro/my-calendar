<UserControl x:Class="WPFCalendar.Components.Card"
             x:Name="root"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFCalendar.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border 
        MinHeight="64"
        MinWidth="120"
        Padding="16"
        Background="#FFE4E0B7"
        CornerRadius="20"
        BorderThickness="1">
        <Grid>
            <StackPanel>
                <TextBlock Text="Huge ass title here" FontSize="28"/>
                <GridSplitter />
                <TextBlock Text="Small description of the task/event/anyway this card can be used"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
